<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Sign In<span class="caret"></span></a>
  <ul class="dropdown-menu" role="menu">
    <li class="nav-provider-sign-in">
      <%= image_tag('instagram_icon.png') %>
      <%= link_to "Instagram", "/auth/instagram" %>
    </li>
    <li class="nav-provider-sign-in">
      <%= image_tag('facebook_icon.png') %>
      <%= link_to "Facebook", "/auth/facebook" %>
    </li>
    <li class="nav-provider-sign-in">
      <%= image_tag('twitter_icon.png') %>
      <%= link_to 'Twitter', "auth/twitter" %>
    </li>
    <li class="nav-provider-sign-in">
      <%= image_tag('google_icon.png') %>
      <%= link_to "Google", "/auth/google_oauth2" %>
    </li>
    <li class="divider"></li>
    <li class="password-sign-in">
      <%= image_tag('ninja_icon.png', class: 'sign-in-ninja-icon') %>
        Email
      <%= render partial: "shared/forms/password_sign_in" %>
    </li>
  </ul>
</li>
<li>
  <%= link_to "Create Account", create_account_path %>
</li>


<% content_for :javascript do %>
  <script type="text/javascript">
    $(function(){
      $('li.password-sign-in').click(function(e){
        e.stopPropagation();
        $('form.password-sign-in-form').toggle();
        $(this).toggle();
      });
    });
  </script>
<% end %>