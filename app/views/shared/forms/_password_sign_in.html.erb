<%= form_tag "/auth/identity/callback", class: "password-sign-in-form" do %>
  <div class="field">
    <%= text_field_tag :auth_key, nil, placeholder: "Email" %>
  </div>
  <div class="field">
    <%= password_field_tag :password, nil, placeholder: "Password" %>
  </div>
  <div class="actions">
    <%= submit_tag "Login", class: "btn btn-success nav-pw-login" %>
  </div>
<% end %>